<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="0dp"
    android:paddingLeft="5dp"
    android:orientation="horizontal"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/patternImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:src="@drawable/pattern_51"/><!--Make sure image is present in Drawable folder-->

    <TextView
        android:id="@+id/patternName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Accio"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/adobetextpro_regular"
        android:textColor="@color/colorGoldLetters" />
</LinearLayout>